# Production Environment Variables Template
# Copy this file to .env and fill in the actual values

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password_in_production
MONGO_DATABASE=truesight

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password

# AI Engine Configuration
AI_ENGINE_API_KEY=change_this_to_secure_random_key
AI_ENGINE_PORT=8000

# Backend Configuration
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com
FRONTEND_PORT=80
BACKEND_URL=https://yourdomain.com

# JWT/Session Secret (if needed)
SESSION_SECRET=change_this_to_secure_random_secret

# File Upload Limits
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100

# Analysis Timeouts
ANALYSIS_TIMEOUT_MS=120000

# Logging
LOG_LEVEL=info
